<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.App.Light" parent="Theme.Material3.Light">
        <item name="colorPrimaryDark">@color/transparent</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorSecondaryVariant">@color/red_500</item>
        <item name="colorTertiary">@color/grey_1</item>
        <item name="colorPrimary">@color/red_500</item>
        <item name="colorPrimaryContainer">#FFC62828</item>
        <item name="colorSecondary">@color/red_500</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="android:textColorHighlight">@color/red_300</item>
        <item name="popupMenuBackground">@drawable/popup_menu_background</item>
        <item name="popupMenuStyle">@drawable/session_menu_background</item>
        <item name="materialCardViewStyle">@style/App.Widget.Material3.CardView.Outlined</item>
        <item name="snackbarButtonStyle">@style/MaterialSnackbarTextButtonTheme</item>
        <item name="windowNoTitle">true</item>
        <item name="enableEdgeToEdge">true</item>
    </style>

    <style name="Theme.App.Dark" parent="Theme.Material3.Dark">
        <item name="colorPrimaryDark">@color/transparent</item>
        <item name="colorSurface">@color/dark_0</item>
        <item name="colorSecondaryVariant">@color/red_300</item>
