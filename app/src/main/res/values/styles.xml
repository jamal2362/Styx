        <item name="colorPrimaryContainer">#E53935</item>
        <item name="colorSecondary">@color/red_300</item>
        <item name="android:colorBackground">@color/dark_0</item>
        <item name="android:textColorHighlight">@color/red_300</item>
        <item name="android:navigationBarColor">@color/dark_0</item>
        <item name="popupMenuBackground">@drawable/popup_menu_background</item>
        <item name="popupMenuStyle">@drawable/session_menu_background</item>
        <item name="materialCardViewStyle">@style/App.Widget.Material3.CardView.Outlined</item>
        <item name="snackbarStyle">@style/MaterialSnackbarTheme.Dark</item>
        <item name="snackbarTextViewStyle">@style/MaterialSnackbarTextViewTheme.Dark</item>
        <item name="snackbarButtonStyle">@style/MaterialSnackbarTextButtonTheme.Dark</item>
        <item name="windowNoTitle">true</item>
        <item name="enableEdgeToEdge">true</item>
    </style>

    <style name="Theme.App.Black" parent="Theme.Material3.Dark">
        <item name="colorPrimaryDark">@color/transparent</item>
        <item name="colorSurface">@color/black</item>
        <item name="colorSecondaryVariant">@color/red_300</item>
        <item name="colorTertiary">@color/dark_0</item>
        <item name="colorPrimary">@color/red_300</item>
        <item name="colorPrimaryContainer">#E53935</item>
        <item name="colorSecondary">@color/red_300</item>
        <item name="android:colorBackground">@color/black</item>
        <item name="android:textColorHighlight">@color/red_300</item>
        <item name="android:navigationBarColor">@color/black</item>
        <item name="popupMenuBackground">@drawable/popup_menu_background</item>
        <item name="popupMenuStyle">@drawable/session_menu_background</item>
        <item name="materialCardViewStyle">@style/App.Widget.Material3.CardView.Outlined</item>
        <item name="snackbarStyle">@style/MaterialSnackbarTheme.Dark</item>
        <item name="snackbarTextViewStyle">@style/MaterialSnackbarTextViewTheme.Dark</item>
        <item name="snackbarButtonStyle">@style/MaterialSnackbarTextButtonTheme.Dark</item>
        <item name="windowNoTitle">true</item>
        <item name="enableEdgeToEdge">true</item>
    </style>

    <style name="Theme.App.DayNight" parent="Theme.App.Light" />

    <style name="boldText">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="italicText">
        <item name="android:textStyle">italic</item>
    </style>

    <style name="normalText">
        <item name="android:textStyle">normal</item>
    </style>

    <style name="BrowserTextMenuItem" parent="@style/Widget.AppCompat.ActionButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="paddingEnd">30dp</item>
        <item name="paddingStart">30dp</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:gravity">left</item>
        <item name="android:textAlignment">gravity</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:paddingLeft">12dp</item>
    </style>

    <style name="AnimationMenu">
        <item name="android:windowEnterAnimation">@anim/menu_open</item>
        <item name="android:windowExitAnimation">@anim/menu_close</item>
    </style>

    <style name="AnimationMenuBottom">
        <item name="android:windowEnterAnimation">@anim/menu_open_bottom</item>
        <item name="android:windowExitAnimation">@anim/menu_close_bottom</item>
    </style>

    <style name="MaterialSnackbarTheme.Dark" parent="@style/Widget.Material3.Snackbar">
        <item name="android:backgroundTint">?attr/colorTertiary</item>
    </style>

    <style name="MaterialSnackbarTextViewTheme.Dark" parent="@style/Widget.Material3.Snackbar.TextView">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MaterialSnackbarTextButtonTheme" parent="@style/Widget.Material3.Button.TextButton.Snackbar">
        <item name="android:textColor">?attr/colorPrimaryContainer</item>
        <item name="rippleColor">?attr/colorPrimaryContainer</item>
    </style>

    <style name="MaterialSnackbarTextButtonTheme.Dark" parent="@style/Widget.Material3.Button.TextButton.Snackbar">
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="rippleColor">?attr/colorPrimary</item>
    </style>

    <style name="App.Widget.Material3.CardView.Outlined" parent="Widget.Material3.CardView.Outlined">
        <item name="strokeColor">?attr/colorPrimaryContainer</item>
        <item name="strokeWidth">2dp</item>
        <item name="cardCornerRadius">24dp</item>
        <item name="checkedIconMargin">10dp</item>
        <item name="checkedIconSize">8dp</item>
        <item name="checkedIcon">@drawable/ic_circle</item>
        <item name="checkedIconTint">?attr/colorPrimary</item>
    </style>

